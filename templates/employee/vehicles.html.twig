{%  extends 'employee_layout.html.twig' %}

{% block title %}
{{ parent() }} - Dashboard
{% endblock %}


            {% block navOptions %}
            {{parent()}}
            {% endblock %}


{% block body %}
    {{ parent() }}

    <section id="postal-banner" class="section postal-employee-banner">
        <div class="container">
            <div>
            
            {% for crumbsKey, crumbsValue in breadcrumbs %}
                <a href={{ crumbsValue }}>{{ crumbsKey}}</a> <strong>/</strong>
            {% endfor %}
            
            </div>
            <div class="title">{{ branch }} Vehicles</div>
            <div class="subtitle"></div>
        </div>

    </section>


    <section class="section is-small dashboard">
    <div class="container">

        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th>
                        VIN
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for vehicle in vehicles %}
                    <tr>
                        <th>{{vehicle.VIN}}</th>
                        <th>
                        {% if vehicle.Status == null %}
                            Free
                        {% elseif vehicle.Status == 0 %}
                            Free
                        {% else %}
                            In-Use
                        {% endif %}
                        
                        </th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
    </section>

{% endblock %}