{%  extends 'base.html.twig' %}

{% block body %}

    {% block header %}
    <div class="hero-head postal-bg-style">
        <nav class="navbar">
        <div class="container">
            <div class="navbar-brand">
            <a class="navbar-item postal-brand" href="{{ path('app-home') }}">
                CourierPO
            </a>
            <span class="navbar-burger burger" data-target="navbarMenuHeroB">
                <span></span>
                <span></span>
                <span></span>
            </span>
            </div>
            <div id="navbarMenuHeroB" class="navbar-menu">

                {% block navOptions %} {% endblock %}

            </div>
        </div>
        </nav>
    </div>
    {% endblock %}

{% endblock %}


{% block javascripts %}
    <script src="js/dropdown.js"></script>
{% endblock %}


{% block footer %}

    <footer>
        <section class="section postal-support-ribbon">
        <div class="container support">
            <div class="subtitle">
                Need help with a package?
            </div>
            <div class="support-container">
                <div class="postal-support-button">Go to Support</div>
            </div>
        </div>
        </section>


        <div class="footer">
            <div class="content container">
            </div>
        </div>
        <div class="postal-copyright">
            <div class="level container">
                <div class="level-left">
                    <div class="level-item">
                        &copy; CourierPO 2019. All rights reserved. 
                    </div>
                </div>
                <div class="level-right">
                    <div class="level-item"><p><a>Terms of Use </a> |</p></div>
                    <div class="level-item"><p><a>Privacy Notice </a> |</p></div>
                    <div class="level-item"><a>Feedback</a></div>
                </div>
            </div>
        </div>
     </footer>


{% endblock %}